# CryptoPulse dYdX Order Routing Service Configuration

# Server Configuration
HTTP_PORT=:8080
LOG_LEVEL=info
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgres://cryptopulse:cryptopulse_dev@localhost:5432/cryptopulse?sslmode=disable
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cryptopulse
DATABASE_USER=cryptopulse
DATABASE_PASSWORD=cryptopulse_dev
DATABASE_SSL_MODE=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=300s

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# dYdX Configuration
# Testnet Configuration (default)
RPC_URL=https://test-dydx.kingnodes.com
INDEXER_URL=https://indexer.v4testnet.dydx.exchange/v4
CHAIN_ID=dydx-testnet-4

# Mainnet Configuration (uncomment for production)
# RPC_URL=https://dydx-rpc.kingnodes.com
# INDEXER_URL=https://indexer.dydx.trade/v4
# CHAIN_ID=dydx-mainnet-1

# Transaction Configuration
GAS_PRICE=0.025
GAS_ADJUSTMENT=1.5
TRANSACTION_TIMEOUT=30s
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_INITIAL=1s
RETRY_BACKOFF_MAX=30s

# API Configuration
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
RATE_LIMIT_REQUESTS_PER_MINUTE=100
REQUEST_TIMEOUT=10s

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=:9090
HEALTH_CHECK_INTERVAL=30s
PROMETHEUS_NAMESPACE=cryptopulse

# Logging Configuration
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/cryptopulse/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_PPROF=false
ENABLE_METRICS=true
ENABLE_TRACING=false

# External Services
NOTIFICATION_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Development Configuration
DEV_MODE=true
HOT_RELOAD=true
DEBUG_ENABLED=true

# Wallet Configuration
# WARNING: Never commit real mnemonics to version control
# Use a testnet mnemonic for development
MNEMONIC="your_test_mnemonic_phrase_here_never_use_real_funds_in_development"
WALLET_HD_PATH="m/44'/118'/0'/0/0"